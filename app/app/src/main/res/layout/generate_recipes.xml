<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/generateFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Generate_Recipes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/status_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/usepantry_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Pantry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/new_rec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#2C000000"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="New Recipe"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_field">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filterMenu"
            android:background="@drawable/filter_menu_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:elevation="20dp"
            android:visibility="gone"
            android:focusable="true">

            <TextView
                android:id="@+id/calories_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/cal_lbe"
                app:layout_constraintEnd_toEndOf="@+id/seekBar"
                app:layout_constraintTop_toTopOf="@+id/cal_lbe" />

            <TextView
                android:id="@+id/cal_lbe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Calories"
                app:layout_constraintStart_toStartOf="@+id/seekBar"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/slider_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cal_lbe" />

            <TextView
                android:id="@+id/ingredient_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Include:"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@+id/filter_search_view"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="308dp" />

            <ListView
                android:background="@drawable/recipe_info_boarder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ingredient_lbl"
                app:layout_constraintTop_toBottomOf="@+id/ingredient_lbl" />

            <SearchView
                android:background="@drawable/filter_search_menu"
                android:id="@+id/filter_search_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cookbook_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:visibility="visible" />

    </FrameLayout>








</androidx.constraintlayout.widget.ConstraintLayout>