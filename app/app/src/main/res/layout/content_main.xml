<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/nav_graph" />


    <LinearLayout
        android:id="@+id/Sidebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">

        <!-- Generate -->
        <ImageButton
            android:id="@+id/fab_generate_recipes_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/desc"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:src="@drawable/gen_icon2"
            android:visibility="visible"
            android:focusable="true" />

        <!-- HomePage -->
        <ImageButton
            android:id="@+id/fab_homepage_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/desc"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/homepage_icon2"
            android:visibility="visible"
            android:focusable="true" />

        <!-- Pantry -->
        <ImageButton
            android:id="@+id/fab_pantry_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/desc"
            android:scaleType="centerCrop"
            android:src="@drawable/pantry_icon2"
            android:visibility="gone"
            android:focusable="true" />

        <!-- Upload -->
        <ImageButton
            android:id="@+id/fab_upload_recipe_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/desc"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:src="@drawable/up_icon2"
            android:visibility="visible"
            android:focusable="true" />

        <!-- Firebase -->
        <ImageButton
            android:id="@+id/fab_firebase"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/circle_background"
            android:clickable="true"
            android:contentDescription="@string/desc"
            android:scaleType="centerCrop"
            android:src="@drawable/firebase_icon"
            android:visibility="visible"
            android:focusable="true" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>